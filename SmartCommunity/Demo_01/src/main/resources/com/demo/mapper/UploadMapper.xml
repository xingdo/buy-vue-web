<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.demo.mapper.UploadMapper" >
  <resultMap id="BaseResultMap" type="com.demo.domain.Upload" >
    <result column="fileName" property="filename" jdbcType="VARCHAR" />
    <result column="filePath" property="filepath" jdbcType="VARCHAR" />
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long" >
    delete from upload
    where id = #{id,jdbcType=BIGINT}
  </delete>
  <insert id="insert" parameterType="com.demo.domain.Upload" >
    <selectKey resultType="java.lang.Long" keyProperty="id" order="BEFORE" >
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into upload ( fileName, filePath
      )
    values (#{filename,jdbcType=VARCHAR}, #{filepath,jdbcType=VARCHAR}
      )
  </insert>
  <update id="updateByPrimaryKey" parameterType="com.demo.domain.Upload" >
    update upload
    set fileName = #{filename,jdbcType=VARCHAR},
      filePath = #{filepath,jdbcType=VARCHAR}
    where id = #{id,jdbcType=BIGINT}
  </update>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select id, fileName, filePath
    from upload
    where id = #{id,jdbcType=BIGINT}
  </select>
  <select id="selectAll" resultMap="BaseResultMap" >
    select id, fileName, filePath
    from upload
  </select>
    <!--提交上传的图片-->
    <insert id="subPath">
        insert into upload (eventhandleid , subpath)
        values
        <foreach collection="photopath" item="item" index="index" separator=",">
            (
              #{eventhandleid},
              #{item}
            )
        </foreach>
    </insert>
</mapper>